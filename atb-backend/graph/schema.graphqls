type User {
  uuid: ID!
  email: String!
}

type Account {
  id: ID!
  owner: ID!
  nickname: String!
  balances: [Balance]!
}

type Balance {
  item: String!
  amount: Int!
}

input NewUser {
  uuid: ID!
  email: String!
  # server_token
}

input NewTransaction {
  from_account_id: ID!
  to_account_id: ID!
  item: String!
  amount: Int!
}

type Transaction

type Mutation {
  signUp(input: NewUser!): User!
}
